{% extends "layout.twig" %}

{% block content %}
    <h2>Posts</h2>
    <a class="btn btn-primary" href="{{ 'admin/posts/insert' | url }}">New Post</a>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        {% for blogPost in blogPosts %}
            <tr>
                <td>{{ blogPost.title }}</td>
                <td><a href="">Edit</a></td>
                <td><a href="">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}